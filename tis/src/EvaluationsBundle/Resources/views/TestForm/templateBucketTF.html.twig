
                <div class="row" id="answers">
                    {% set counter = 1 %}
                    {% for ans in question['answers']%}
                        {% set falseC = counter + 1 %}
                        <div class="input-field col s8">
                            <pre>{{ ans.content }}</pre>
                        </div>
                        <div class="input-field col s4">

                            <input name="group{{ ans.idAnswerElement }}" type="radio" id="test{{numQ}}{{counter}}" value="verdadero"/>

                            <label for="test{{numQ}}{{counter}}">Es Verdadero</label>

                            <input name="group{{ ans.idAnswerElement }}" type="radio" id="test{{numQ}}{{falseC}}" value="falso"/>

                            <label for="test{{numQ}}{{falseC}}">Es Falso</label>

                        </div>
                        {% set counter = counter + 2 %}
                    {% endfor %}
                </div>