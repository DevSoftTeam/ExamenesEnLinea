{% extends 'base.html.twig' %}
{% block title %} Examen {% endblock %}
{% block body%}
	<div class="row">
		<label class="teal-text lighten-4"><h3>Resolviendo Examen</h3></label>
		<div class="col s12">
			<label class="teal-text lighten-4"><h5>TÃ­tulo del examen :</h5></label>
			<label><h5>{{ test.title }}</h5></label>
		</div>
		<div class="col s12">
			<label class="teal-text lighten-4"><h5>Nombre :</h5></label>
			<p>{{ app.user.name }} {{app.user.lastName}}</p>
		</div>
		<form action="">
			<div class="row">
				<div class="col s12">
					{% for question in questions %}
						{% if question.idType.idType == 2 %}
							{{ include('EvaluationsBundle:TestForm:templateOrderQuestion.html.twig') }}
						{% endif %}
					{% endfor %}
				</div>
			</div>
		    <div class="center-align">
		        <button class="btn waves-effect waves-light" type="submit" name="action">Terminar</button>
		        <a class="waves-effect waves-light btn" href={{ path('test_index') }}>Cancelar</a>
		    </div>
		</form>
	</div>
{% endblock %}