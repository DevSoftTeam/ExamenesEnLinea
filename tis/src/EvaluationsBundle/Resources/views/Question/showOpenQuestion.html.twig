{% extends 'base.html.twig' %}
{% Pregunta %}
{% block body %}
    <h3>Pregunta</h3>

    <table>
        <tbody>
            <tr>
                <th>Enunciado</th>
                <td>{{ question.statementQuestion }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td><img src="{{ asset('uploads/images/')}}{{question.pathImageQuestion}}"></td>
            </tr>
            <tr>
                <th>Area</th>
                <td></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('question_index') }}">Ver lista</a>
        </li>
        <li>
            <a href="{{ path('question_edit', { 'id': question.idQuestion }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}