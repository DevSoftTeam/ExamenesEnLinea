{% extends 'base.html.twig' %}
{% block title %}Pregunta{% endblock %}
{% block body %}

    <div >
    <label class="teal-text lighten-4"><h3>Detalles de Pregunta</h3></label>

        <div class="row">
            <div class="col s12">
                <label class="teal-text darken-4"><h6>Area :</h6></label>
                <div>{{ question.idArea.nameArea }}</div>
            </div>
        </div>

        <div class="row">
            <div class="col s12">
                <label class="teal-text darken-4"><h6>Enunciado :</h6></label>
                <div><pre>{{ question.statementQuestion }}</pre></div>
            </div><br><br><br>
            <div class="col s12 alight center">
                {% if question.pathImageQuestion != null %}
                <img height="40%" width="40%" src="{{ asset('uploads/images/')}}{{question.pathImageQuestion}}">
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row">
            <div class="col ">
                <a class="waves-effect waves-light btn" href={{ path('question_index') }}>Ver preguntas</a>
            </div>
            <div class="col push-s5">
                <a class="waves-effect waves-light btn" href={{path('openQuestion_edit', { 'id': question.idQuestion})}}>Editar</a>
            </div>
            <div class="col push-s5">
                {{ form_start(delete_form) }}
                    <button class="btn pink waves-effect waves-light" type="submit" name="action">Eliminar</button>
                {{ form_end(delete_form) }}
            </div>
    </div>

{% endblock %}