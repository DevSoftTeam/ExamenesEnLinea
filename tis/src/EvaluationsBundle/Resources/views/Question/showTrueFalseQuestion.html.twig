{% extends 'base.html.twig' %}
{% block title %}Pregunta{% endblock %}
{% block body %}
<div>
    <div >
        <label class="teal-text lighten-4"><h3>Detalles de Pregunta Falso Verdadero</h3></label>
        <div class="row">
            <div class="col s12">
                <label class="teal-text darken-4"><h6>Area :</h6></label>
                <div>{{ question.idArea.nameArea }}</div>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label class="teal-text darken-4"><h6>Enunciado :</h6></label>
                <div><pre >{{ question.statementQuestion }}</pre></div>
            </div>
            <div class="col s12">
                {% if question.pathImageQuestion != null %}
                    <img align="center" height="40%" width="40%" src="{{ asset('uploads/images/')}}{{question.pathImageQuestion}}">
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <label class="teal-text darken-4"><h6>Respuesta :</h6></label>
                <div>{% for ans in answers %}
                    <div class="col s12">
                        {% if  ans.content == "true"  %}
                            <p>Verdadero</p>
                        {% elseif  ans.content == "false"  %}
                        <p>Falso</p>
                        {% else %}
                            <p>no definido</p>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<div class="row">
    <div class="col ">
        <a class="waves-effect waves-light btn" href={{ path('question_index') }}>Ver preguntas</a>
    </div>
    <div class="col push-s5">
        <a class="waves-effect waves-light btn" href={{path('trueFalseQuestion_edit', { 'id': question.idQuestion})}}>Editar</a>
    </div>
    <div class="col push-s5">
        {{ form_start(delete_form) }}
        <button class="btn  waves-effect waves-light" type="submit" name="action">Eliminar</button>
        {{ form_end(delete_form) }}
    </div>
</div>
</div>
{% endblock %}