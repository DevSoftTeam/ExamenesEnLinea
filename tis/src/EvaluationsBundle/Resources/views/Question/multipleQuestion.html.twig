{% extends 'base.html.twig' %}
{% block title %} Crear pregunta {% endblock %}
{% block body %}
    
  <label class="teal-text lighten-4"><h3>Crear pregunta de respuesta multiple:</h3></label>
  <div class="row">

    <!--form action={{ path('openQuestion_new',{ 'id_type': 1}) }} method="POST" class="col s12" enctype="multipart/form-data" -->
  {{ form_start(form,{ 'enctype':"multipart/form-data"}) }}
      <div class="row">
        <div class="col s12">
        <label class="teal-text darken-4"><h6>Area :</h6></label>
        <input list="areas" name="area" placeholder="seleccione o introzca nombre de area" id="area">
        <datalist id="areas">
        {% for area in areas %}
          <option value="{{ area.nameArea }}">
        {% endfor %}
        </datalist>
      <span id="errorArea"></span>
      </div>
      </div>

        <div class="row">
          <div class="input-field col s12">
            <label class="teal-text darken-4"><h6>Enunciado :</h6></label>
            <!--textarea id="textarea1" class="materialize-textarea" name="statementQuestion"></textarea-->
            {{ form_widget(form.statementQuestion,{'attr':{'class':'materialize-textarea', 'id':'textarea1','length':'5000','placeholder':'Introduzca texto'}}) }}
            {{ form_errors(form.statementQuestion) }}
          </div>
        </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>imagen</span>
          <i class="material-icons right">perm_media</i>
          <!--input type="file" name="image"-->
          {{ form_widget(form.image) }}
        </div>
        <div class="file-path-wrapper">
          <!--input class="file-path validate" type="text" name="pathImageQuestion"-->
          {{ form_widget(form.pathImageQuestion,{'attr':{'class':'file-path validate'}}) }}
        </div>
      </div>

      <div class="row">
      <div class="row">
      <div class="col s12">
      <label class="teal-text lighten-4 col s12"><h5>Respuestas :</h5></label>
      <label class="grey-text lighten-1 col s12"><h6>*Las respuestas se mostraran de forma aleatoria. Debe completar minimo tres elementos de respuestas.</h6></label>
      </div>
      </div>

      <div class="row" id="answers">
      {% for i in 1..4 %}
      <div class="input-field col s12">
          <!--input placeholder="Introduzca texto" name="answer{{i}}" type="textArea" class="validate" length="250"-->
          <div><label class="teal-text lighten-4  "><h6>Respuesta {{ i }} :</h6></label></div>
          <br>
          <br>
          <textarea class="materialize-textarea validate col s10" name="answer{{i}}" placeholder="" length="600" 
          {% if i <= 3 %}required{% endif %}></textarea>
          <div></div>
          
          <div class="input-field col s2">
          <p>
        <input name="chec{{i}}" type="checkbox" id="test{{i}}" />
        <label class="teal-text lighten-4" for="test{{i}}">Correcta</label>
      </p>
          </div>
          </div>
        

        {% endfor %}
        <br>
        </div>
        </div>

        <br><br>
        <div class="row">
          <a class="btn waves-effect waves-light " onClick="addElement();">Agregar respuesta</a>
        <div class=" alight center">
        <button class="btn waves-effect waves-light " type="submit" name="action" onclick="validation();">Guardar</button>
      <a class="waves-effect waves-light btn" href={{ path('question_new') }}>Cancelar</a>
      </div>  
      </div>
    <!--/form-->
    {{ form_end(form) }}
    </div>
    <script> var i = 5;
      var addElement = function(){
      var answers = document.getElementById("answers");
      
      $(answers).append('<br><br><div class="input-field col s12" id="col'+i+'">');
      var div = document.getElementById("col"+i);
      $(div).append('<textarea class="materialize-textarea validate col s10" name="answer'+i+'" placeholder="" length="600"></textarea>');
      
      $(div).append('<label class="teal-text lighten-4"><h6>Respuesta '+i+':</h6></label>');
      

      $(div).append('<div class="input-field col s2"><p><input class="with-gap" name="chec"'+i+'value=""'+i+' type="checkbox" id="test"'+i+'/><label class="teal-text lighten-4" for="test"'+i+'>Correcta</label></p></div>');
      i++;
      //var divi = document.getElementById("test"+i+);
    
      
    };</script>
    <script>$(document).ready(function() {
    $('input#input_text, textarea#textarea1').characterCounter(); });
    var validation = function(){
      var value = (document.getElementById("area").value).trim();
    var divArea = document.getElementById("errorArea");
    if( value == null || value.length == 0) {
      divArea.textContent = 'Este valor no debería estar vacío';
    }else{
      divArea.textContent = '';
    }
    };
    </script>
{% endblock %}