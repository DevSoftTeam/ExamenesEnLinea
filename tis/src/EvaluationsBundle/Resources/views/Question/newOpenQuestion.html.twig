{% extends 'base.html.twig' %}
{% block title %} Crear pregunta{% endblock %}
{% block body %}
	<h4>Crear pregunta Abierta con respuesta parrafo</h4>
	<div class="row">
    <form action="openQuestion/new" method="GET" class="col s12">
    	<div class="input-field col s12">
    	<select>
    		<option value="" disabled selected>Sin area</option>
    		{% for area in areas %}
    		<option value={{area.idArea}}>{{ area.nameArea }}</option>
    		{% endfor %}
    	</select>
    	<label>Area: </label>
    	<a class="btn-floating btn-short waves-effect waves-light pink" href="/area"><i class="material-icons">add</i></a>
    	</div>

	      <div class="row">
	        <div class="input-field col s12">
	          <textarea id="textarea1" class="materialize-textarea" name="statementQuestion"></textarea>
	          <label for="textarea1">Enunciado</label>
	        </div>
	      </div>

	      <button class="btn waves-effect waves-light" type="submit" name="action">Guardar
		    <i class="material-icons right">send</i>
		  </button>
    </form>
    </div>
{% endblock %}