{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de examenes</h1>

    <table>
        <thead>
            <tr>
                <th>Nro Examen</th>
                <th>Titulo</th>
                <th>Materia</th>
                <th>Institucion</th>
                <th>Inicio Examen</th>
                <th>Fin Examen</th>
                <th>Inicio Inscripcion</th>
                <th>Fin Inscripcion</th>
                <th>Puntuacion Maxima</th>
                <th>Porcentage Total</th>
                <th>Funciones</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td><a href="{{ path('test_show', { 'id': test.idTest }) }}">{{ test.idTest }}</a></td>
                <td>{{ test.title }}</td>
                <td>{{ test.matter }}</td>
                <td>{{ test.institution }}</td>
                <td>{% if test.startTime %}{{ test.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if test.endTime %}{{ test.endTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if test.startEnrollment %}{{ test.startEnrollment|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if test.endEnrollment %}{{ test.endEnrollment|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ test.score }}</td>
                <td>{{ test.percentage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('test_show', { 'id': test.idTest }) }}">mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('test_edit', { 'id': test.idTest }) }}">editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_new') }}">Crear nuevo Examen</a>
        </li>
    </ul>
{% endblock %}
