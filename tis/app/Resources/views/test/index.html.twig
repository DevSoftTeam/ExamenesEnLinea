{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de examenes</h1>

    <table>
        <thead>
            <tr>
               <!-- <th>Idtest</th>-->
                <th>Título de Exámen</th>
                <th>Materia</th>
                <th>Institución</th>

                <th>Hora inicio de registro</th>
                <th>Hora final de registro</th>
                <th>Fecha</th>
                <th>Puntaje del exámen</th>
                <th>Total de porcentaje</th>
                <th>Contraseña del exámen</th>
                <th>Accciones</th>
            </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                 <!--<td><a href="{{ path('test_show', { 'id': test.idTest }) }}">{{ test.idTest }}</a></td>-->
                <td>{{ test.titleTest }}</td>
                <td>{{ test.matter }}</td>
                <td>{{ test.institution }}</td>
                <td>{% if test.hourInit %}{{ test.hourInit|date('Y-m-d') }}{% endif %}</td>
                <td>{% if test.hourEnd %}{{ test.hourEnd|date('Y-m-d') }}{% endif %}</td>
                <td>{% if test.date %}{{ test.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ test.scoreTest }}</td>
                <td>{{ test.totalPercentage }}</td>
                <td>{{ test.testPassword }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('test_show', { 'id': test.idTest }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('test_edit', { 'id': test.idTest }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_new') }}">Crear nuevo exámen</a>
        </li>
    </ul>
{% endblock %}
