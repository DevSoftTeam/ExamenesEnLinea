{% extends 'base.html.twig' %}

{% block body %}
    <h1>Examenes</h1>

    <table>
        <tbody>
            <tr>
                <th>Nro Examen</th>
                <td>{{ test.idTest }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ test.title }}</td>
            </tr>
            <tr>
                <th>Materia</th>
                <td>{{ test.matter }}</td>
            </tr>
            <tr>
                <th>Institucion</th>
                <td>{{ test.institution }}</td>
            </tr>
            <tr>
                <th>Hora Inicio</th>
                <td>{% if test.startTime %}{{ test.startTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hora Fin</th>
                <td>{% if test.endTime %}{{ test.endTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Inicio</th>
                <td>{% if test.startDate %}{{ test.startDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Fin</th>
                <td>{% if test.endDate %}{{ test.endDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hora inicio Inscripcion</th>
                <td>{% if test.startTimeEnrollment %}{{ test.startTimeEnrollment|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Hora Fin Inscripcion</th>
                <td>{% if test.endTimeEnrollment %}{{ test.endTimeEnrollment|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Inicio Inscripcion</th>
                <td>{% if test.startDateEnrollment %}{{ test.startDateEnrollment|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha Fin Inscripcion</th>
                <td>{% if test.endDateEnrollment %}{{ test.endDateEnrollment|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Puntuacion Maxima</th>
                <td>{{ test.score }}</td>
            </tr>
            <tr>
                <th>Porcentaje Total</th>
                <td>{{ test.percentage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('test_index') }}">Atras</a>
        </li>
        <li>
            <a href="{{ path('test_edit', { 'id': test.idTest }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
