{% extends 'base.html.twig' %}

{% block body %}
    <h1>UserSystem</h1>

    <table>
        <tbody>
            <tr>
                <th>Iduser</th>
                <td>{{ userSystem.idUser }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ userSystem.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ userSystem.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ userSystem.name }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ userSystem.mail }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ userSystem.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usersystem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usersystem_edit', { 'id': userSystem.idUser }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
