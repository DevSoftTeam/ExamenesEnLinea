{% extends 'base.html.twig' %}

{% block body %}
    <h1>Area</h1>

    <table>
        <tbody>
            <tr>
                <th>Identificador area:</th>
                <td>{{ area.idArea }}</td>
            </tr>
            <tr>
                <th>Nombre area:</th>
                <td>{{ area.nameArea }}</td>
            </tr>
            <tr>
                <th>Descripcion de area:</th>
                <td>{{ area.descriptionArea }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('area_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('area_edit', { 'id': area.idArea }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
