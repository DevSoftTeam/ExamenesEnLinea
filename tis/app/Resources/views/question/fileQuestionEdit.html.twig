{% extends 'base.html.twig' %}

{% block body %}
    <h1>Editar Pregunta</h1>
{#{{ form_widget(edit_form) }} #}

{{ form_start(edit_form) }}
         <div class="row">
            <div class="input-field">
            <i class="material-icons prefix">mode_edit</i>
            {{ form_widget(edit_form.statementQuestion, {'attr': {'class':"materialize-textarea"}}) }}
            {{ form_errors(edit_form.statementQuestion) }}
                <label for="question_statementQuestion">Enunciado</label>
            </div>
        </div>
        
        <label for="question_area">Area</label>
        {{ form_errors(edit_form.area) }}
        {{ form_widget(edit_form.area) }}

        <div class="file-field input-field">
          <div class="btn">
            <span>imagen</span>
            <i class="material-icons right">perm_media</i>
                {{ form_widget(edit_form.image) }}
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>

        <div class="file-field input-field">
          <div class="btn">
            <span>archivo</span>
            <i class="material-icons right">description</i>
                {{ form_widget(edit_form.file) }}
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>

        <br>
        <input type="submit" value="Edit" class="btn waves-effect waves-light" /> 
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('question_index') }}">Atras</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
