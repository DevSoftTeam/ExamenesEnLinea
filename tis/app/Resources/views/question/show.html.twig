{% extends 'base.html.twig' %}

{% block body %}
    <h1>Datos de la Pregunta</h1>

    <div>
        <h5>Enunciado</h4>
        <h6>{{ question.statementQuestion }}</h6>
    </div>
    <p>{{question.pathImageQuestion}}</p>
    <h5>imagen</h5>
