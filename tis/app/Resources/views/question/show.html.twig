{% extends 'base.html.twig' %}

{% block body %}
    <h1>Datos de la Pregunta</h1>

    <div>
        <h5>Enunciado</h4>
        <h6>{{ question.statementQuestion }}</h6>
    </div>
    <p>{{question.pathImageQuestion}}</p>
    <h5>imagen</h5>
    <img height="30%" width="50%" src="{{asset('uploads/images/')}}{{question.pathImageQuestion}}">
    
    <h5>Archivo</h5>
    <a href="{{asset('uploads/')}}{{ question.pathFileQuestion }}" download>archivo</a>
    
    <div class="row">
        <div class="col ">
            <a class="waves-effect waves-light btn" href={{ path('question_index') }}>Ver preguntas</a>
        </div>
        <div class="col push-s5">
            <a class="waves-effect waves-light btn" href="{{ path('questionfile_edit', { 'id': question.idQuestion }) }}">Editar</a>
        </div>
        <div class="col push-s5">
            {{ form_start(delete_form) }}
                <button class="btn pink waves-effect waves-light" type="submit" name="action">Eliminar</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
