{% extends 'base.html.twig' %}

{% block title %} Banco de preguntas {% endblock %}
{% block body %}
    <h1>Lista de preguntas</h1>

    <table>
        <thead>
            <tr>
                <th>Nro. pregunta</th>
                <th>Enunciado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td><a href="{{ path('question_show', { 'id': question.idQuestion }) }}">{{ question.idQuestion }}</a></td>
                <td>{{ question.statementQuestion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('question_show', { 'id': question.idQuestion }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('question_edit', { 'id': question.idQuestion }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('question_new') }}">Crear una nueva pregunta</a>
        </li>
    </ul>
{% endblock %}
