            <i class="material-icons right">description</i>
                {{ form_widget(form.file) }}
          </div>
          <div class="file-path-wrapper">
            {{ form_widget(form.pathFileQuestion,{'attr':{'class':'file-path validate',disabled:''}}) }}          
